<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="utf-8">

  <!-- Bootstrap -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/css/main.css" type="text/css" />
  <link rel="stylesheet" href="/css/header.css" type="text/css" />
  <link rel="stylesheet" href="/css/menu.css" type="text/css" />
  <link rel="stylesheet" href="/css/sides.css" type="text/css" />
  <link rel="stylesheet" href="/css/cart.css" type="text/css" />
  <link rel="stylesheet" href="/css/payment.css" type="text/css" />
  <link rel="stylesheet" href="/css/nav.css" type="text/css" />
  <link rel="stylesheet" href="/css/slideshow.css" type="text/css" />
  <link rel="stylesheet" href="/css/triangles.css" type="text/css" />


  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Coda+Caption:800|IBM+Plex+Sans+Condensed:400,600,700&display=swap"
    rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed|Roboto:300,400&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Changa+One:400i&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- External JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/cart.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/menu.js"></script>
  <script type="text/javascript" src="/scripts/slideshow.js"></script>
  <script type="text/javascript" src="/scripts/shatter.js"></script>
  <% if(locals.user) { %>
    <script type="text/javascript" src="/scripts/login-check.js"></script>
  <% } else { %>
    <script type="text/javascript" src="/scripts/not-logged-in.js"></script>
  <% };%>
  </head>

<body>
  <nav>
    <div class="nav-content">
      <span id="logo">H&H</span>
      <div id="user-area">
        <span id="user-name"></span>
        <div id="phone-changer">
          <input class='form-control' type='tel' id='phone-changer-input' pattern='[0-9]{10}' maxlength='10'
            minlength='10' required>
          <button class='btn btn-outline-light' type='submit'>Update Phone #</button>
        </div>
      </div>
      <div class="stacked">
        <span id="login"><b>Login</b></span>
        <span id="logout"><b>Logout</b></span>
      </div>
    </div>
  </nav>
  <div class="page-container">

    <header class="header-container">
    </header>
    <!-- Slideshow container -->
    <div class="slideshow-container">
      <!-- Next and previous buttons -->
      <!-- <a class="prev">&#10094;</a>
      <a class="next">&#10095;</a> -->
    </div>
    <br>

    <main class="main-container">
      <div class="menu-container">

        <section class="menu-group">
          <h4 class="menu-group-title">FOR THE TABLE</h4>

          <ul class="menu-items" id='for-the-table-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">GREENS</h4>

          <ul class="menu-items" id='greens-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">BOWLS</h4>

          <ul class="menu-items" id='bowls-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">CASUAL</h4>

          <ul class="menu-items" id='casual-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">SEAFOOD</h4>

          <ul class="menu-items" id='seafood-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">PASTA</h4>

          <ul class="menu-items" id='pasta-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">CHICKEN</h4>

          <ul class="menu-items" id='chicken-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">BURGERS + SANDWICHES</h4>

          <ul class="menu-items" id='burgers-sandwiches-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">DESSERTS</h4>

          <ul class="menu-items" id='desserts-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->
      </div> <!-- /.menu-container -->

      <div class="cart-container">
        <div class="cart-header">
          <i class="fa fa-shopping-cart fa-3x fa-white"></i>
        </div>
        <div class="hide-cart">
          <div class="cart-body">
            <ul class="cart-items">
            </ul><!-- /.cart-items -->

            <div class="cart-total">
              <div class="cart-total-label">Total</div>
              <div class="cart-total-amount">Your cart is empty</div>
            </div><!-- /.cart-total -->
          </div><!-- /.cart-body -->

          <div class="cart-footer">
            <button type='button' class='btn btn-block btn-light' id='add-comment'>ADD COMMENTS</button>
            <button type="button" class="btn btn-dark btn-block" id="add-payment">ADD PAYMENT</button>
          </div>
        </div> <!-- /.hide-cart -->
      </div><!-- /.cart-container -->

    </main>

    <div class="payment-container">
      <form action="">
        <div id='payment-header'>
          <h4 class="mb-3">Payment</h4>
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="row">
          <div class="col-12 mb-3">
            <label for="cc-name">Name on card</label>
            <input type="text" class="form-control pay-form" id="cc-name" placeholder="" required>
            <small class="text-muted">Full name as displayed on card</small>
          </div>
          <div class="col-12 mb-3">
            <label for="cc-number">Credit card number</label>
            <input type="text" class="form-control pay-form" id="cc-number" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-6 mb-3">
            <label for="cc-expiration">Expiration</label>
            <input type="text" class="form-control pay-form" id="cc-expiration" placeholder="" required>
          </div>
          <div class="col-6 mb-3">
            <label for="cc-expiration">CVV</label>
            <input type="text" class="form-control pay-form" id="cc-cvv" placeholder="" required>
          </div>
        </div>
        <hr class="mb-4">
        <button class="btn btn-dark btn-block" type="button" id="checkout">CHECKOUT</button>
      </form>
    </div> <!-- /.payment-container -->

    <div class='comment-container'>
      <div id='comment-header'>
        <h4 class="mb-3">Comments</h4>
        <button type="button" class="close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <textarea class="form-control" rows="5" id="comment"
        placeholder="//additional comments for your order go here!"></textarea>
    </div>

    <!-- Success Modal-->
    <div id="success-modal" class="modal">
        <div class="modal-content centered" id="success-pop">
          <span id='success-text'>SUCCESS!</span>
          <span>Check you phone for updates!</span>
        </div>
    </div>

    <!-- Failure Modal-->
    <div id="fail-modal-login" class="modal">
      <div class="modal-content centered" id="fail-pop">

        <h4 class="mb-3"><b>Oops. You forgot to log in.</b></h4>
        <div id='modal-inputs'>
          <input type="text" class="form-control" placeholder="//email">
          <input type="text" class="form-control" placeholder="//password">
        </div>
        <div id='failure-buttons'>
          <button class="btn btn-dark btn-block" type="button" id="modal-login">LOGIN</button>
          <button class="btn btn-dark btn-block" type="button" id="modal-checkout">REGISTERING IS COOL TOO!</button>
        </div>
      </div>
    </div>


    <footer>
      <div class="about-us">
        <span>-- Open between the hours of 11 and 23 daily --</span>
        <hr class="light" />
      </div>
      <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.307566340507!2d-123.12006378387531!3d49.289516579332194!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x548671837ce7e7f5%3A0x60248a028fed8b2a!2sCactus%20Club%20Cafe%20Coal%20Harbour!5e0!3m2!1sen!2sca!4v1571876991746!5m2!1sen!2sca"
      width="1200" height="300" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
    </footer>
  </div> <!-- /page-container -->
  <div id='fracture'>
    <div id='triangle-1'></div>
    <div id='triangle-2'></div>
    <div id='triangle-text'>
      <div id='triangle-3'></div>
      <span id='initial-logo'>H&H</span>
    </div>
    <div id='triangle-4'></div>
    <div id='triangle-5'></div>
    <div id='triangle-6'></div>
  </div>
</body>

</html>
