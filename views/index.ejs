<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="utf-8">

  <!-- Bootstrap -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/css/main.css" type="text/css" />
  <link rel="stylesheet" href="/css/header.css" type="text/css" />
  <link rel="stylesheet" href="/css/menu.css" type="text/css" />
  <link rel="stylesheet" href="/css/sides.css" type="text/css" />
  <link rel="stylesheet" href="/css/cart.css" type="text/css" />
  <link rel="stylesheet" href="/css/payment.css" type="text/css" />


  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/cart.js"></script>
  <!-- <script type="text/javascript" src="/scripts/app.js"></script> -->
  <script type="text/javascript" src="/scripts/menu.js"></script>

</head>

<body>
  <div class="page-container">

    <header class="header-container">
      <h1>Hungry Hero</h1>
      <p>header header header</p>
    </header>

    <main class="main-container">
      <div class="menu-container">

        <section class="menu-group">
          <h4 class="menu-group-title">FOR THE TABLE</h4>

          <ul class="menu-items" id='for-the-table-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">GREENS</h4>

          <ul class="menu-items" id='greens-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">BOWLS</h4>

          <ul class="menu-items" id='bowls-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">CASUAL</h4>

          <ul class="menu-items" id='casual-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">SEAFOOD</h4>

          <ul class="menu-items" id='seafood-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">PASTA</h4>

          <ul class="menu-items" id='pasta-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">CHICKEN</h4>

          <ul class="menu-items" id='chicken-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">BURGERS + SANDWICHES</h4>

          <ul class="menu-items" id='burgers-sandwiches-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">DESSERTS</h4>

          <ul class="menu-items" id='desserts-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group" id="sides-container">
          <div class="menu-item" id="sides-item">
            <div class="sides-header">
              <span class="" style="font-size: 20px;font-weight: 500;color:white">EXTRAS</span>
              <br>
              <span class="" style="font-size: 12px;color: white">Would you like to add a side for your meal?</span>
            </div>
            <div class="sides-body">
              <div class="form-order">
                <form class="form-body">
                  <div class="form-row" style="">
                    <label class="form-label">
                      <span class="" style="color: rgba(14,18,25,1);font-size: 20px;">Add a side</span>
                    </label>
                    <div class="form-controls">
                      <ul class="list-checkboxes">
                        <li class="food-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="fries" id="fries">
                            <label class="option" for='fries'><div class="sides-title">Fries</div>
                              <div class="sides-price">$2.00</div>
                            </label>
                          </div>
                        </li>
                        <li class="food-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="soup" id="soup">
                            <label class="option" for='soup'><div class="sides-title">Soup</div>
                              <div class="sides-price">$2.00</div>
                            </label>
                          </div>
                        </li>
                        <li class="food-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="salad" id="salad">
                            <label class="option" for='salad'><div class="sides-title">Salad</div>
                              <div class="sides-price">$1.50</div>
                            </label>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="form-row">
                    <label class="form-label">
                      <span class="" style="color: rgba(14,18,25,1);font-size: 20px;">Add a drink</span>
                    </label>
                    <div class="form-controls">
                      <ul class="list-checkboxes">
                        <li class="drink-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="coke" id="coke">
                            <label class="option" for="coke"><div class="sides-title">Coke</div>
                              <div class="sides-price">$2.00</div>
                            </label>
                          </div>
                        </li>
                        <li class="drink-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="icetea" id="icetea">
                            <label class="option" for='icetea'><div class="sides-title">Ice tea</div>
                              <div class="sides-price">$2.00</div>
                            </label>
                          </div>
                        </li>
                        <li class="drink-sides">
                          <div class="checkbox">
                            <input type="checkbox" name="sprite" id="sprite">
                            <label class="option" for='sprite'><div class="sides-title">Sprite</div>
                              <div class="sides-price">$2.00</div>
                            </label>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="sides-footer">
              <div class="form-actions">
              <button type="button" value="Submit" class="btn btn-dark btn-block" id="add-order">ADD TO ORDER</button>
              </div>
              <a href="/" class="btn btn-default" id="menu-item-button-cancel">CANCEL</a>
            </div>
          </div>
          </section>
      </div> <!-- /.menu-container -->



      <div class="cart-container">
        <div class="cart-header">
          <span class="" style="font-size: 16px;font-weight: 500;color: white">HUNGRY
            HERO
            SUCCULENT CLUB</span><br>
          <span class="" style="font-size: 12px;color: white">401 W Georgia
            Street</span>
        </div>
        <div class="cart-body">
          <ul class="cart-items">
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">Wrap, Soup & Bottled Water</h2>
              <div class="cart-item-price">$9.95</div>
            </li><!-- /.cart-item -->
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">Wrap, Soup & Bottled Water</h2>
              <div class="cart-item-price">$9.95</div>
            </li><!-- /.cart-item -->
          </ul><!-- /.cart-items -->

          <div class="cart-total">
            <div class="cart-total-label"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">Total</span>
            </div>
            <div class="cart-total-amount"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">$25.44</span>
            </div>
          </div><!-- /.cart-total -->
        </div><!-- /.cart-body -->

        <div class="cart-footer">
          <button type="button" class="btn btn-dark btn-block" id="add-payment">ADD PAYMENT</button>
        </div>
      </div><!-- /.cart-container -->

    </main>

    <div class="payment-container">
      <form action="">
        <h4 class="mb-3">Payment</h4>
        <div class="row">
          <div class="col-12 mb-3">
            <label for="cc-name">Name on card</label>
            <input type="text" class="form-control" id="cc-name" placeholder="" required>
            <small class="text-muted">Full name as displayed on card</small>
          </div>
          <div class="col-12 mb-3">
            <label for="cc-number">Credit card number</label>
            <input type="text" class="form-control" id="cc-number" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-6 mb-3">
            <label for="cc-expiration">Expiration</label>
            <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
          </div>
          <div class="col-6 mb-3">
            <label for="cc-expiration">CVV</label>
            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
          </div>
        </div>
        <hr class="mb-4">
        <button class="btn btn-dark btn-block" type="submit">CHECKOUT</button>
      </form>
    </div> <!-- /.payment-container -->

  </div> <!-- /page-container -->

</body>

</html>
