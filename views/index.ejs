        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">BURGERS + SANDWICHES</h4>

          <ul class="menu-items" id='burgers-sandwiches-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->

        <section class="menu-group">
          <h4 class="menu-group-title">DESSERTS</h4>

          <ul class="menu-items" id='desserts-container'>
          </ul><!-- /.menu-items -->
        </section><!-- /.menu-group -->
      </div> <!-- /.menu-container -->

      <div class="cart-container">
        <div class="cart-header">
          <span class="" style="font-size: 16px;font-weight: 500;color: white">HUNGRY
            HERO
            SUCCULENT CLUB</span><br>
          <span class="" style="font-size: 12px;color: white">401 W Georgia
            Street</span>
        </div>
        <div class="cart-body">
          <ul class="cart-items">
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">Wrap, Soup & Bottled Water</h2>
              <div class="cart-item-price">$9.95</div>
            </li><!-- /.cart-item -->
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">Wrap, Soup & Bottled Water</h2>
              <div class="cart-item-price">$9.95</div>
            </li><!-- /.cart-item -->
          </ul><!-- /.cart-items -->

          <div class="cart-total">
            <div class="cart-total-label"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">Total</span>
            </div>
            <div class="cart-total-amount"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">$25.44</span>
            </div>
          </div><!-- /.cart-total -->
        </div><!-- /.cart-body -->

        <div class="cart-footer">
          <button type="button" class="btn btn-dark btn-block" id="add-payment">ADD PAYMENT</button>
        </div>
      </div><!-- /.cart-container -->

    </main>

    <div class="payment-container">
      <form action="">
        <h4 class="mb-3">Payment</h4>
        <div class="row">
          <div class="col-12 mb-3">
            <label for="cc-name">Name on card</label>
            <input type="text" class="form-control" id="cc-name" placeholder="" required>
            <small class="text-muted">Full name as displayed on card</small>
          </div>
          <div class="col-12 mb-3">
            <label for="cc-number">Credit card number</label>
            <input type="text" class="form-control" id="cc-number" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-6 mb-3">
            <label for="cc-expiration">Expiration</label>
            <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
          </div>
          <div class="col-6 mb-3">
            <label for="cc-expiration">CVV</label>
            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
          </div>
        </div>
        <hr class="mb-4">
        <button class="btn btn-dark btn-block" type="submit">CHECKOUT</button>
      </form>
    </div> <!-- /.payment-container -->

